{
  "manifest_version": 3,
  "name": "ClearPolicy: Summarize the Terms & Conditions of Online Services ",
  "description": "...",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": [
    "activeTab",               
    "scripting",               
    "https://help.netflix.com/*"
  ],
  "host_permissions": [
    "*://*/*"                  
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scraper.js"]
    }
  ]
}

